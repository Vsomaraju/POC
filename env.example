# Environment Configuration Example
# Copy this file to .env and update the values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d

# ===========================================
# FHIR SERVER
# ===========================================
FHIR_BASE_URL=https://hapi.fhir.org/baseR4

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# CLIENT CONFIGURATION
# ===========================================
VITE_API_URL=/api

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# For staging
STAGING_API_URL=https://staging-api.yourdomain.com/api
STAGING_FRONTEND_URL=https://staging.yourdomain.com

# For production
PROD_API_URL=https://api.yourdomain.com/api
PROD_FRONTEND_URL=https://yourdomain.com

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Performance monitoring
SLOW_REQUEST_THRESHOLD=5000
LOG_LEVEL=info

# External monitoring services (optional)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# ===========================================
# SECURITY
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================
# Email service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# ===========================================
# GITHUB ACTIONS SECRETS
# ===========================================
# These should be set in GitHub repository secrets
# GITHUB_TOKEN=your_github_token
# SNYK_TOKEN=your_snyk_token
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# DOCKER_USERNAME=your_docker_username
# DOCKER_PASSWORD=your_docker_password
